@model long_term_care.Models.CaseDailyRegistration

@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/CaseDailyRegistrations.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <div class="insideBox">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h3>(單位名稱)   C單位巷弄長照站-每日登記表</h3>
                <div class="form-group">
                    <div class="row">
                        <div class="col" style="text-align:end; margin-top: 7px;">
                            <label asp-for="CaseContId" class="control-label">問卷編號</label>
                        </div>
                        <div class="col" style="text-align:start;">
                            <input asp-for="CaseContId" class="form-control" type="text" style="background-color: transparent; border: none; outline: none;" value="@ViewBag.CaseContId" readonly />
                            <span asp-validation-for="CaseContId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group ElderIDInput">
                    <label asp-for="CaseNo" class="control-label">個案編號: <input asp-for="CaseNo" class="form-control" type="text" /></label>
                    <span asp-validation-for="CaseNo" class="text-danger"></span>
                </div>

                <div class="GiantBox">
                    <div class="title">
                        <div class="row header">
                            <div class="col-3">日期</div>
                            <div class="col-2">體溫</div>
                            <div class="col-2">脈搏</div>
                            <div class="col-2">接送需求</div>
                            <div class="col-3">血壓檢測值</div>
                        </div>
                    </div>

                    <div class="container" id="dataContainer">
                        <!-- Each data rows-->
                        <div class="row tBody">
                            <div class="form-group col-3">
                                <div class="group">
                                    <label asp-for="Casedate" class="control-label"> <input asp-for="Casedate" class="form-control transparent-input" type="datetime" placeholder="YYYY/MM/DD"/></label>
                                    <span asp-validation-for="Casedate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group col-2">
                                <div class="group">
                                    <label asp-for="CaseTemp" class="control-label"> <input asp-for="CaseTemp" class="form-control transparent-input" type="text"/></label>
                                    <span asp-validation-for="CaseTemp" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group col-2">
                                <div class="group">
                                    <label asp-for="CasePluse" class="control-label"> <input asp-for="CasePluse" class="form-control transparent-input" type="text" /></label>
                                    <span asp-validation-for="CasePluse" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group col-2">
                                <fieldset>
                                    <label asp-for="CasePick" class="control-label"><input type="radio" asp-for="CasePick" value="無" class="transparent-input" />無</label>
                                    <label asp-for="CasePick" class="control-label"><input type="radio" asp-for="CasePick" value="上午" class="transparent-input" />上午</label>
                                    <label asp-for="CasePick" class="control-label"><input type="radio" asp-for="CasePick" value="下午"  class="transparent-input" />下午</label>
                                    <span asp-validation-for="CasePick" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="form-group col-3">
                                <div class="group">
                                    <fieldset>
                                        <div class="group">
                                            <label asp-for="CaseBlood" class="control-label"><input type="radio" asp-for="CaseBlood" value="正常"  class="transparent-input" />正常(120/80mmHg以下)</label>
                                        </div>
                                        <div class="group">
                                            <label asp-for="CaseBlood" class="control-label"><input type="radio" asp-for="CaseBlood" value="高血壓前期" class="transparent-input" />高血壓前期(120/80-135/85mmHg以下)</label>
                                        </div>
                                        <div class="group">
                                            <label asp-for="CaseBlood" class="control-label"><input type="radio" asp-for="CaseBlood" value="高血壓危險群" class="transparent-input" />高血壓危險群(135/85mmHg以上)</label>
                                        </div>
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group wrap">
                        <button class="button" type="submit" value="Create">儲存</button>
                    </div>
                </form>
            </div>
        <div>
            <a asp-action="Index">返回</a>
        </div>
    </div>
    
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>

    


