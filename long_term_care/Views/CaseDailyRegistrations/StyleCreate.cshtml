@model long_term_care.Models.CaseDailyRegistration

@{
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<style>
    #container {
        display: flex;
        flex-direction: column;
        width: 100%;
        margin-top: 20px;
    }

    .row {
        display: flex;
        justify-content: space-between;
        padding: 10px 0;
        box-shadow: 0px 1px 0px #ccc, 0px -1px 0px #ccc, 1px 0px 0px #ccc, -1px 0px 0px #ccc;
        margin-bottom: 10px;
    }

        .row > div {
            display: flex;
            align-items: center;
            justify-content: center;
            flex: 1;
        }

    .btn-flip {
        width: 60px;
        height: 30px;
        background-color: #f5f5f5;
        color: #000;
        border: none;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-flip:hover {
            background-color: #ddd;
        }
    .switch {
        position: relative;
        display: inline-block;
        width: 60px;
        height: 34px;
    }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        -webkit-transition: .4s;
        transition: .4s;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            -webkit-transition: .4s;
            transition: .4s;
        }

    input:checked + .slider {
        background-color: #2196F3;
    }

    input:focus + .slider {
        box-shadow: 0 0 1px #2196F3;
    }

    input:checked + .slider:before {
        -webkit-transform: translateX(26px);
        -ms-transform: translateX(26px);
        transform: translateX(26px);
    }

    .slider.round {
        border-radius: 34px;
    }

        .slider.round:before {
            border-radius: 50%;
        }

</style>
<div id="container">
</div>
<script>
    let days = ['星期一', '星期二', '星期三', '星期四', '星期五'];
let startTimes = ['課程開始時間', '7:30', '8:30', '9:00', '9:30', '13:00'];
let endTimes = ['課程結束時間','8:30', '9:00', '9:30', '12:00', '16:00'];
    function createRow(day, startTimes, endTimes) {
        let row = document.createElement('div');
        row.className = 'row';

        let dayDiv = document.createElement('div');
        dayDiv.textContent = day;
        row.appendChild(dayDiv);

        let startTimeDiv = document.createElement('div');
        let startTimeSelect = document.createElement('select');
        startTimes.forEach(time => {
            let option = document.createElement('option');
            option.textContent = time;
            option.value = time;
            startTimeSelect.appendChild(option);
        });
        startTimeSelect.addEventListener('change', function () {
            let selectedTime = this.value;
            if (selectedTime !== '課程開始時間') {
                let endTime = endTimes[startTimes.indexOf(selectedTime)];
                endTimeSelect.value = endTime;
            }
        });
        startTimeDiv.appendChild(startTimeSelect);
        row.appendChild(startTimeDiv);

        let separator = document.createElement('div');
        separator.textContent = '-';
        row.appendChild(separator);

        let endTimeDiv = document.createElement('div');
        let endTimeSelect = document.createElement('select');
        endTimes.forEach(time => {
            let option = document.createElement('option');
            option.textContent = time;
            option.value = time;
            endTimeSelect.appendChild(option);
        });
        endTimeSelect.disabled = true;
        endTimeDiv.appendChild(endTimeSelect);
        row.appendChild(endTimeDiv);

        let conflictDiv = document.createElement('div');
        let conflictInput = document.createElement('input');
        conflictInput.type = 'text';
        conflictInput.placeholder = '課程';
        conflictDiv.appendChild(conflictInput);
        row.appendChild(conflictDiv);

        let switchDiv = document.createElement('div');
        let switchLabel = document.createElement('label');
        switchLabel.className = 'switch';
        let switchInput = document.createElement('input');
        switchInput.type = 'checkbox';
        let switchSpan = document.createElement('span');
        switchSpan.className = 'slider round';
        switchLabel.appendChild(switchInput);
        switchLabel.appendChild(switchSpan);
        switchDiv.appendChild(switchLabel);
        row.appendChild(switchDiv);

        let flipDiv = document.createElement('div');
        let flipBtn = document.createElement('button');
        flipBtn.className = 'btn-flip';
        flipBtn.textContent = '空堂';

        switchInput.addEventListener('change', function () {
            if (this.checked) {
                flipBtn.textContent = '衝堂';
            } else {
                flipBtn.textContent = '空堂';
            }
        });

        flipDiv.appendChild(flipBtn);
        row.appendChild(flipDiv);

        return row;
    }

    function populateRows() {
        let container = document.getElementById('container');
        days.forEach(day => {
            let row = createRow(day, startTimes, endTimes);
            container.appendChild(row);
        });
    }

    populateRows();

</script>