@model long_term_care.Models.MemberInformation
@{
    ViewData["Title"] = "Login";

}
<link href="~/css/login.css" rel="stylesheet" />
}
<body>
    <div class="container-fluid">
        <div class="content">
            <div class="txt">
                <div class="LogInBox">                 
                    <div class="LogIn">
                        
                        <form method="POST" id="loginForm" action="/Main/Login">
                            <input type="text" name="id" class="id" placeholder="&nbsp;&nbsp;員工證號碼" required id="id">
                            <input type="password" name="password" placeholder="&nbsp;&nbsp;密碼" required id="password">
                            <div class="check">
                                <input type="text" name="verificationCode" placeholder="驗證碼" id="vertify" required>
                                <img src="@Url.Action("VerificationCodeImage", "Main")" id="verificationCodeImage" alt="Verification Code" onclick="refreshVerificationCode()" class="verification-code-image">
                            </div>
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="error">
                                    @Html.ValidationSummary(false)
                                </div>
                            }
                            <button type="submit" name="loginBtn" class="loginBtn" id="loginbtn">登入</button>
                        </form>
                        <div class="line"></div>
                        <form method="get" action="/Main/Caseinfor">
                            <button type="submit" name="newAccount" class="newAccount">建立新帳號</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="img">
                <img src="~/image/mainpagepic.png" />
            </div>
        </div>
    </div>
</body>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS" crossorigin="anonymous"></script>
 

