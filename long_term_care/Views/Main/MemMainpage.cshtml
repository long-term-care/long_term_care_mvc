
@{
    ViewData["Title"] = "MemMainpage";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" type='text/css'>
<body>
    <div>
        <form action="/Main/Logout" method="post">
            <button type="submit" name="logout">登出</button>
        </form>
    </div>
    <div class="global">
        <div class="container-fluid">

            <!-- Blue area -->
            <div class="row1">
                <div class="col-md-12">
                    <div class="card head">
                        <div class="card-body">
                            <i class="fa-solid fa-user-nurse" style="color: #ffffff;"></i>
                            <h5>志工及照護人員</h5>
                        </div>
                    </div>

                    <button class="card">
                        @*MemSigns / Index*@
                        <div class="card-body">
                            <i class="fa-solid fa-user-nurse" style="color: #3D81BF;"></i>
                            <h5>出勤簽到</h5>
                        </div>
                    </button>
                    <button class="card">
                        <div class="card-body">
                            <i class="fa-regular fa-comments" style="color: #3D81BF;"></i>
                            <h5>講座設計</h5>
                        </div>
                    </button>
                    <button class="card">
                        <div class="card-body">
                            <i class="fa-solid fa-calendar-days" style="color: #3D81BF;"></i>
                            <h5>課表管理</h5>
                        </div>
                    </button>
                    <button class="card">
                        <div class="card-body">
                            <i class="fa-solid fa-signature" style="color: #3D81BF;"></i>
                            <h5>長者活動簽到記錄</h5>
                        </div>
                    </button>
                </div>
            </div>

            <!-- Blue area -->
            <div class="row2">
                <div class="col-md-12">
                    <div class="card head">
                        <div class="card-body">
                            <i class="fa-regular fa-heart" style="color: #FFFFFF;"></i>
                            <h5>服務系統</h5>
                        </div>
                    </div>

                    <button class="card">
                        @* CasePhysicalMentals / Index*@
                        <div class="card-body">
                            <i class="fa-solid fa-heart-pulse" style="color: #D04667;"></i>
                            <h5>身心評估問卷</h5>
                        </div>
                    </button>
                    <button class="card">
                        @*CaseTelRecords / Index*@
                        <div class="card-body">
                            <i class="fa-solid fa-phone" style="color: #D04667;"></i>
                            <h5>電話問安</h5>
                        </div>
                    </button>
                    <button class="card">
                        @*CaseCareRecords / Index*@
                        <div class="card-body">
                            <i class="fa-regular fa-house-medical-circle-check" style="color: #D04667;"></i>
                            <h5>關懷訪視</h5>
                        </div>
                    </button>
                    <button class="card">
                        <div class="card-body">
                            <i class="fa-solid fa-bus" style="color: #D04667;"></i>
                            <h5>交通接送</h5>
                        </div>
                    </button>
                    <button class="card">
                        <div class="card-body">
                            <i class="fa-sharp fa-solid fa-clipboard-user" style="color: #D04667;"></i>
                            <h5>每日登記</h5>
                        </div>
                    </button>
                    <button class="card">
                        <div class="card-body">
                            <i class="fa-solid fa-person-cane" style="color: #D04667;"></i>
                            <h5>長者需求調查</h5>
                        </div>
                    </button>
                </div>

            </div>
        </div>

        <div class="scheduleBox">
            <div class="schedule">
                <i class="fa-sharp fa-solid fa-bookmark" style="color: #ffffff; font-size: 18px;"></i>&nbsp;&nbsp;
                <h5>當周課表</h5>
            </div>
            <!-- <img src="https://picsum.photos/700/340?random=4" class="pics" alt="This is a schedule form."> -->
            <img src="https://picsum.photos/300/100?random=4" class="pics" alt="This is a schedule form.">
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>
<style>
    body {
    font-family: 'Hiragino Kaku Gothic Pro', 'WenQuanYi Zen Hei', '微軟正黑體', '蘋果儷中黑', Helvetica, Arial, sans-serif;
}
i, h5{
    font-size: 10px;
}
.container-fluid {
    background-color: #CBE9EA;
}
div.col-md-12 {
    text-align: center;
}
.row1 .col-md-12, .row2 .col-md-12 {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
}
.row1 {
    padding: 1px 0 0 0;
}
.row2 {
    padding: 1px 0 1px 0;
}
div.card-body, div.card.head {
    width: 50px;
    height: 170px;
}
.row1 .card { 
    width: 70px;
}
.row2 .card {
    width: 45px;
}
.row1 .card, .row2 .card {
    border-radius: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
}
.row1 .head {
    background-color: #51B2DC;
    color: white;
}
.row2 .head {
    background-color: #D04667;
    color: white;
} 
.card {
    margin: 7px 0;
} 
.card:hover:not(.head) {
    transform: scale(1.06);
    transition: 0.5s;
}
.schedule {
    padding: 15px 0 0 15px;
    display: flex;
    background-color: #3D81BF;
    color: white;
    width: 300px;
}
.scheduleBox {
    position: relative;
    top: 0;
    left: 0;
    transform: translate(10%, 10%);
}
.scheduleBox .pics {
    padding-top: 5px;
}
i {
    font-size: 20px;
}

    h5 {
        font-size: 18px;
    }

    .row1 {
        padding: 20px 50px 0 50px;
    }

    .row2 {
        padding: 20px 50px 20px 50px;
    }

    div.card.head, div.card-body {
        width: 170px;
        height: auto;
    }

    .row1 .card .card-body h5, .row2 .card .card-body h5 {
        padding-top: 30px;
    }

    .row1 .card {
        width: 274px;
    }

    .row2 .card {
        width: 180px;
    }

    .schedule {
        width: 700px;
    }

    .scheduleBox {
        position: absolute;
        top: 70%;
        left: 50%;
        transform: translate(-50%, -40%);
    }

    i {
        font-size: 60px;
    }
</style>

