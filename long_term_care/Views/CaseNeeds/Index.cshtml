@model IEnumerable<long_term_care.Models.CaseNeed>

@{
    ViewData["Title"] = "Index";
}

<div class="wrap">
    <button class="Home" href="#">首頁</button>
</div>
<div class="wrap_Entry">
    <button class="Edit" onclick="location.href='@Url.Action("Create", "CaseNeeds")'">填寫</button>

    <br />

    <button class="View" onclick="location.href='@Url.Action("Details", "CaseNeeds")'">查閱</button>

</div>
@section topCSS {
    <style type="text/css">
        body {
            font-family: 'Hiragino Kaku Gothic Pro', 'WenQuanYi Zen Hei', '微軟正黑體', '蘋果儷中黑', Helvetica, Arial, sans-serif;
            background-color: #222831;
        }

        .wrap {
            margin: 30px;
        }

        .Home {
            display: inline-flex;
            align-items: center;
            color: #FFFFFF;
            background-color: transparent;
            border: 1px solid #FFFFFF;
            min-height: 25px;
            padding: 0 20px;
            font-size: 17px;
            z-index: 1;
            position: relative;
            cursor: pointer;
        }

            .Home::before, .Home::after {
                content: "";
                background-color: #FFFFFF;
                display: block;
            }

            .Home::before {
                width: 25px;
                height: 1px;
                margin-right: 20px;
            }

            .Home:hover {
                color: #222831;
                text-decoration: none;
            }

                .Home:hover::before, .Home:hover {
                    background-color: #222831;
                }

            .Home::after {
                width: 0%;
                height: 100%;
                right: 0;
                top: 0;
                position: absolute;
                z-index: -1;
            }

            .Home:hover::after {
                width: 100%;
            }

            .Home:hover::before, .Home:hover, .Home::after {
                transition: all 0.45s ease-out;
            }

        .wrap_Entry {
            margin-top: 20px;
            text-align: center;
        }

            .wrap_Entry > button {
                margin: 55px 70px;
            }

        .Edit, .View {
            transition: all 0.3s ease-in-out;
            font-size: 25px;
            width: 180px;
            height: 120px;
            border-radius: 30px;
            background-color: #F3B7AD;
            box-shadow: 0 20px 30px -6px rgba(203, 233, 234, 0.4);
            outline: none;
            cursor: pointer;
            border: none;
            color: rgb(250, 250, 250);
        }

            .Edit:hover, .View:hover {
                transform: translateY(3px);
                box-shadow: 0 10px 20px -6px rgba(203, 233, 234, 0.6);
                background-color: #FFB4A2;
            }

            .Edit:active, .View:active {
                opacity: 0.7;
            }

    </style>
}

