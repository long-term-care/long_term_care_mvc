        </tr>
        <tr>
            <td class="table-label">@Html.DisplayNameFor(model => model.CaseView7)</td>
            <td class="table-value">@Html.DisplayFor(modelItem => modelItem.CaseView7)</td>
        </tr>
        <tr>
            <td class="table-label">@Html.DisplayNameFor(model => model.CaseView8)</td>
            <td class="table-value">@Html.DisplayFor(modelItem => modelItem.CaseView8)</td>
        </tr>
        <tr>
            <td class="table-label">@Html.DisplayNameFor(model => model.CaseView9)</td>
            <td class="table-value">@Html.DisplayFor(modelItem => modelItem.CaseView9)</td>
        </tr>
    </table>

    <form method="post" action="/CaseNeeds/ExportLatestCaseNeed">
        <div class="form-group">
            <label for="CaseIDcard">個案身分證:</label>
            <input type="text" class="form-control" id="CaseIDcard" name="CaseIDcard" required>
        </div>
        <label for="exportType">輸出格式:</label>
        <div class="select-container">
            <select id="exportType" name="exportType" class="form-control">
                <option value="excel">Excel</option>
                <option value="pdf">PDF</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary btn-submit">輸出</button>
    </form>

    <div>
        <a asp-action="Details" class="btn-back">返回</a>
    </div>
</div>
