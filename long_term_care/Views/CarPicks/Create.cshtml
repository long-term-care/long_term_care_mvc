@using static long_term_care.Models.CarPick;
@model long_term_care.Models.CarPick
<!---DB lacks of Year column-->
@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/CarPicks.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <div class="insideBox">
            <h3>○○○C單位巷弄長照站交通接送清冊</h3>
            <div class="infoBox">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row" style="justify-content: space-between;">
                        <div class="form-group col-3">
                            <label asp-for="MemSid" class="control-label">志工編號</label>&nbsp;
                            <input asp-for="MemSid" class="form-control" type="text" />
                            <span asp-validation-for="MemSid" class="text-danger"></span>
                            <!--<select asp-for="MemSid" class="form-control" asp-items="ViewBag.MemSid"></select>-->
                        </div>
                        <div class="form-group ord col-7">
                            <label asp-for="CarId" class="control-label">表單編號</label>
                            <input id="orderNumberInputCar" asp-for="MemSid" class="form-control" style="background-color: transparent; border: none; outline: none;" />
                            <span asp-validation-for="CarId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8 form-group">
                            <label asp-for="CarCaseAdr" class="control-label">單位地址:</label>&nbsp;
                            <input asp-for="CarCaseAdr" class="form-control" type="text" id="address" />
                            <span asp-validation-for="CarCaseAdr" class="text-danger"></span>
                        </div>


                        <!--<div class="col-6 form-group">
                            <h4>時間:&nbsp;</h4>
                           
                        </div>-->
                    </div>
                    <div class="row">
                        <div class="col-6 form-group">
                            <label asp-for="CarType" class="control-label">車種:</label>&nbsp;
                            <select asp-for="CarType" class="form-control">
                                @foreach (var value in Enum.GetValues(typeof(CarEnumType)))
                                {
                                    <option value="@value.ToString()">@value.ToString()</option>
                                }
                            </select>
                            <span asp-validation-for="CarType" class="text-danger"></span>
                        </div>
                        <div class="col-6 form-group">
                            <label asp-for="CarNum" class="control-label">車號:</label>&nbsp;
                            <input asp-for="CarNum" class="form-control" type="text" />
                            <span asp-validation-for="CarNum" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 form-group">
                            <label asp-for="CarPrice" class="control-label">共計:</label>&nbsp;
                            <input asp-for="CarPrice" class="form-control" type="text" />&nbsp;
                            <span asp-validation-for="CarPrice" class="text-danger">元</span>
                        </div>
                    </div>
                    <div class="row header hd">
                        <div class="col-1 hd">項次</div>
                        <div class="col-2 hd">日期</div>
                        <div class="col-5 hd">住家</div>
                    </div>
                    <!-- Example row-->
                    <div class="row test">
                        <div class="example">
                            <div class="col-1 ex">
                                <h6>範例</h6>
                            </div>
                            <div class="col-2 ex">
                                <h6>1/1</h6>
                            </div>
                            <div class="col-5 ex" style="font-size: 9px;">
                                <h6>
                                    起點:<br />
                                    陳大雄家
                                    (地址：新北市○區○ 路○巷○弄○號○樓)
                                </h6>
                            </div>
                        </div>
                        <!-- Each data rows-->
                        <div class="container">
                            <div class="row columns">
                                <div class="col-1 cnt">
                                    <div id="nums">1</div>
                                </div>
                                <div class="col-2 form-group">
                                    <input asp-for="CarDate" class="form-control" type="date" class="transparent-input" style="width: 130px;" />
                                    <span asp-validation-for="CarDate" class="text-danger"></span>
                                </div>
                                <div class="col-5 form-group">
                                    <input asp-for="CarCaseAdr" class="form-control" class="transparent-input" />
                                    <span asp-validation-for="CarCaseAdr" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <!-- last row -->
                        <div class="container">
                            <div class="amount row columns">
                                <div class="col-1">
                                    <div id="amount">合計</div>
                                </div>
                                <div class="col-2 form-group">
                                    <input asp-for="CarL" class="form-control" class="transparent-input" placeholder="公升" />
                                    <span asp-validation-for="CarL" class="text-danger"></span>
                                </div>
                                <div class="col-2 form-group">
                                    <input asp-for="CarKm" class="form-control" class="transparent-input" placeholder="公里" />
                                    <span asp-validation-for="CarKm" class="text-danger"></span>
                                </div>
                                <div class="col-2 form-group">
                                    <input asp-for="CaseContId" class="form-control" class="transparent-input" placeholder="實支金額" />
                                    <span asp-validation-for="CaseContId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}