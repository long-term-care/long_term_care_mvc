
@{
    ViewData["Title"] = "Create";
}

<style>
    .container {
        background-color: #CBE9EA;
        display: flex;
        flex-wrap: wrap;
        margin: auto;
        justify-content: center;
        align-items: center;
    }

    .title {
        width: 100%;
        display: flex;
        justify-content: center;
    }

        .title input {
            background-color: rgb(255, 255, 255);
            width: 500px;
        }

    .signbody {
        width: 100%;
        height: 1000px;
        background-color: #F1FFFF;
        border-radius: 20px;
    }

    .singbodytitle {
        width: 100%;
        background-color: #F1FFFF;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: center;
        border-radius: 20px;
        padding: 50px;
    }

        .singbodytitle input {
            width: 200px;
            background-color: #fdfdfd00;
            border: none;
        }

    .day {
        padding: 10px;
        display: flex;
        align-items: center;
        border: solid 2px red;
        background-color: #FFCBBB;
        border-radius: 20px;
    }

    .teacher {
        padding: 10px;
        display: flex;
        border: solid 2px red;
        background-color: #FFCBBB;
        border-radius: 20px;
    }

    .place {
        padding: 10px;
        display: flex;
        border: solid 2px red;
        background-color: #FFCBBB;
        border-radius: 20px;
    }

    .content {
        width: 100%;
        background-color: #F1FFFF;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        border-radius: 20px;
    }

        .content input {
            background-color: #fbf9f900;
            border: none;
            border-bottom: solid 2px black;
        }

    .id {
        width: 25%;
        height: 50px;
        margin: 2%;
        background-color: #FFCBBB;
        border-radius: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .name {
        width: 25%;
        height: 50px;
        margin: 2%;
        background-color: #FFF0EB;
        border-radius: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .tool {
        width: 25%;
        height: 50px;
        margin: 2%;
        background-color: #FFF0EB;
        border-radius: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .btn {
        height: 50px;
    }

    .send {
        width: 100%;
        display: flex;
        justify-content: center;
    }

        .send button {
            color: #000;
            background-color: #FBD4DF;
            width: 300px;
            height: 70px;
            font-size: 16px;
            margin: 3%;
        }
</style>

<body>
    <div class="container">
        <div class="title">
            <h1>活動名稱: </h1><input type="text" value="">

        </div>
        <div class="signbody">
            <div class="singbodytitle">
                <div class="day">
                    <p>活動日期:</p>
                    <input type="text" class="text">
                </div>
                <div class="teacher">
                    <p>講師姓名:</p>
                    <input type="text" class="text">
                </div>
                <div class="place">
                    <p>活動地點:</p>
                    <input type="text" class="text">
                </div>
            </div>
            <div class="content">
                <div class="id">
                    <p>學員編號</p>
                </div>
                <div class="name">
                    <p>學員姓名</p>
                </div>
                <div class="tool">
                    <p>服務項目</p>
                </div>
            </div>
            <div class="content">
                <div class="id">
                    <input type="text" class="text">
                </div>
                <div class="name">
                    <input type="text" class="text">
                </div>
                <div class="tool">
                    <input type="text" class="text">
                </div>
                <div class="btn">
                    <button type="button" class="btn btn-secondary">新增</button>
                </div>
            </div>
            <div class="content">
                <div class="id">
                    <p>T001</p>
                </div>
                <div class="name">
                    <p>Tom</p>
                </div>
                <div class="tool">
                    <p>健康促進,共餐服務</p>
                </div>
                <div class="btn">
                    <button type="button" class="btn btn-secondary">編輯</button>
                    <button type="button" class="btn btn-secondary">刪除</button>
                </div>
            </div>
        </div>
        <div class="send">
            <button type="button" class="btn btn-dark">提交</button>
            <button type="button" class="btn btn-dark">返回上一頁</button>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>
</body>


