
@{
    ViewData["Title"] = "Create";
}

<style>
    .container {
        background-color: #CBE9EA;
        display: flex;
        flex-wrap: wrap;
        margin: auto;
        justify-content: center;
        align-items: center;
    }

    .title {
        width: 100%;
        display: flex;
        justify-content: center;
    }

        .title input {
            background-color: rgb(255, 255, 255);
            width: 500px;
        }

    .signbody {
        width: 100%;
        height: 1000px;
        background-color: #F1FFFF;
        border-radius: 20px;
    }

    .singbodytitle {
        width: 100%;
        background-color: #F1FFFF;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: center;
        border-radius: 20px;
        padding: 50px;
    }

        .singbodytitle input {
            width: 200px;
            background-color: #fdfdfd00;
            border: none;
        }

    .day {
        padding: 10px;
        display: flex;
        align-items: center;
        border: solid 2px red;
        background-color: #FFCBBB;
        border-radius: 20px;
    }

    .teacher {
        padding: 10px;
        display: flex;
        border: solid 2px red;
        background-color: #FFCBBB;
        border-radius: 20px;
    }

    .place {
        padding: 10px;
        display: flex;
        border: solid 2px red;
        background-color: #FFCBBB;
        border-radius: 20px;
    }

    .content {
        width: 100%;
        background-color: #F1FFFF;
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        border-radius: 20px;
    }

        .content input {
            background-color: #fbf9f900;
            border: none;
            border-bottom: solid 2px black;
        }

    .id {
        width: 25%;
        height: 50px;
        margin: 2%;
        background-color: #FFCBBB;
        border-radius: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .name {
        width: 25%;
        height: 50px;
        margin: 2%;
        background-color: #FFF0EB;
        border-radius: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .tool {
        width: 25%;
        height: 50px;
        margin: 2%;
        background-color: #FFF0EB;
        border-radius: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .btn {
        height: 50px;
    }

    .send {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items:center;
    }

        .send button {
            color: #000;
            background-color: #FBD4DF;
            width: 300px;
            height: 70px;
            font-size: 16px;
            margin: 3%;
        }
</style>

<body>

    <div class="container" id="container">
        <div class="title">
            <h1>活動名稱: </h1><input type="text" value="" id="actname">

        </div>
        <div class="signbody">
            <div class="singbodytitle">
                <div class="day">
                    <p>活動日期:</p>
                    <input type="date" class="text" id="actdate">
                </div>
                <div class="teacher">
                    <p>講師姓名:</p>
                    <input type="text" class="text" id="actteacher">
                </div>
                <div class="place">
                    <p>活動地點:</p>
                    <input type="text" class="text" id="actplace">
                </div>
            </div>
            <div class="send">
                <button type="button" class="btn btn-dark" id="classadd">提交</button>
            </div>
             
        </div>
        <div class="send">
            <form>
                <button type="submit" class="btn btn-dark">返回上一頁</button>
            </form>
        </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous">
    </script>
    <script>
          

            var classaddbtn = document.getElementById("classadd");
            classaddbtn.addEventListener("click",function(){
                var actname = document.getElementById("actname").value;
                var actdate = document.getElementById("actdate").value;
                var actteacher = document.getElementById("actteacher").value;
                var actplace = document.getElementById("actplace").value;
               
                
                var xhr = new XMLHttpRequest();
                xhr.open("POST", "/CaseActsign/Create", true);
                xhr.setRequestHeader("Content-Type", "application/json;charset=UTF-8");

                // 將selectedValue轉換為JSON格式
                var data = {
                    type : 1,
                    ActDate : actdate,
                    ActLec  : actteacher,
                    ActCourse : actname,
                    ActLoc :  actplace
                }

                xhr.onreadystatechange = function () {
                    if (xhr.readyState === XMLHttpRequest.DONE && xhr.status === 200) {
                        // 請求成功，執行相應的處理邏輯
                        var response = JSON.parse(xhr.responseText);
                        
                    }

                };
                xhr.send(JSON.stringify(data));
                alert("活動簽到表建立成功");
                window.location.href = "/CaseActsign/Index";
            })
        </script>
     

</body>


