}
.Home::before, .Home::after {
    content: "";
    background-color: #FFFFFF;
    display: block;
}
.Home::before {
    width: 25px;
    height: 1px;
    margin-right: 20px;
}
.Home:hover {
    color: #222831;
    text-decoration: none;
}
.Home:hover::before, .Home:hover {
    background-color: #222831;
}
.Home::after {
    width: 0%;
    height: 100%;
    right: 0;
    top: 0;
    position: absolute;
    z-index: -1;
}
.Home:hover::after {
    width: 100%;
}
.Home:hover::before, .Home:hover, .Home::after {
    transition: all 0.45s ease-out;
}
.wrap_Entry {
    margin-top: 20px;
